# =====================================================
# SKYBOX TELEGRAM DRIVE - Environment Configuration
# =====================================================

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Channels (Create 5 private channels and get IDs)
# Storage Channel: For storing files
STORAGE_CHANNEL_ID=-1001234567890
# Database Channel: For file metadata
DATABASE_CHANNEL_ID=-1001234567891
# Users Channel: For user authentication
USERS_CHANNEL_ID=-1001234567892
# Folders Channel: For folder structure
FOLDERS_CHANNEL_ID=-1001234567893
# Shares Channel: For sharing links
SHARES_CHANNEL_ID=-1001234567894

# NextAuth Configuration
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Telegram Auth (Get from https://my.telegram.org/apps)
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_APP_ID=your_app_id
TELEGRAM_APP_HASH=your_app_hash

# Application Settings
NODE_ENV=development
APP_NAME=SkyBox Drive
APP_URL=http://localhost:3000

# Storage Configuration
MAX_FILE_SIZE=4000000000  # 4GB in bytes
CHUNK_SIZE=20971520       # 20MB chunks for upload
ENABLE_COMPRESSION=true

# Security
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=true
MAX_UPLOADS_PER_HOUR=10

# Optional: Custom Bot Settings
BOT_WEBHOOK_URL=
ENABLE_NOTIFICATIONS=true
AUTO_DELETE_TEMP_FILES=true